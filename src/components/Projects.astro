---
const PROJECTS = [
    {
        title: "Project 1",
        description: "This is a project",
        link: "https://example.com",
        img: "/images/chaquetastatic1.jpg",
        alt: "Project 1",
        tags: ["tag1", "tag2"]
    },
    {
        title: "Project 2",
        description: "This is another project",
        link: "https://example.com",
        img: "/images/trip-premium.jpg",
        alt: "Project 2",
        tags: ["tag1", "tag2"]
    }
]
---
<div class="grid grid-cols-1 md:grid-cols-2 gap-4 md:justify-items-center">
{
    PROJECTS.map(({title, description, tags, img, alt, link }) => (
            <a href="#" class="group relative block bg-black rounded md:w-80 lg:w-96">
                <img src={img} alt={alt} class="absolute inset-0 h-full w-full object-cover opacity-75 transition-opacity group-hover:opacity-50 rounded">
                <div class="relative p-4 sm:p-6 lg:p-8">
                    <h3 class="text-sm font-medium uppercase tracking-widest text-pink-500">{title}</h3>
                    
                    <div class="mt-32 sm:mt-48 lg:mt-64">
                    <div class="translate-y-8 transform opacity-0 transition-all group-hover:translate-y-0 group-hover:opacity-100 rounded"
      >
                        <p class="text-sm text-white">
                        {description}
                        </p>
                        <ul class="flex gap-4 mt-4 flex-wrap justify-start">
                            {tags.map(tag => (
                                <li class="rounded-md border border-pink-500/40 flex justify-center items-center gap-x-2 py-1 px-2 text-base bg-pink-500/10 text-pink-500">#{tag}</li>
                            ))}
                        </ul>
                    </div>
                    </div>
                </div>
            </a>
            ))
}

</div>