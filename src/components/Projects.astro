---
const PROJECTS = [
    {
        title: "Visit Dubai",
        description: "This is a project",
        link: "https://github.com/niknef/TP-FINAL-MAQUETADO",
        img: "/images/dubai.webp",
        alt: "Visit Dubai",
        tags: ["HTML", "CSS"]
    },
    {
        title: "Mundo Urbano E-Commerce",
        description: "This is another project",
        link: "https://example.com",
        img: "/images/mundourbanoweb.webp",
        alt: "Mundo Urbao E-Commerce",
        tags: ["JS", "HTML", "CSS"]
    }
]
---
<div class="grid grid-cols-1 md:grid-cols-2 gap-4 md:justify-items-center">
{
    PROJECTS.map(({title, description, tags, img, alt, link }) => (
            <a href={link} target="_blank" rel="noopener" class="group relative block bg-black rounded md:w-80 lg:w-11/12">
                <img src={img} alt={alt} class="absolute inset-0 h-full w-full object-cover opacity-80 transition-opacity group-hover:opacity-30 rounded">
                <div class="relative p-4">
                    <h3 class="text-xl font-medium uppercase tracking-widest text-pink-600">{title}</h3>
                    
                    <div class="mt-32 sm:mt-48 lg:mt-64">
                    <div class="translate-y-8 transform opacity-0 transition-all group-hover:translate-y-0 group-hover:opacity-100 rounded"
      >
                        <p class="text-sm text-white">
                        {description}
                        </p>
                        <ul class="flex gap-4 mt-4 flex-wrap justify-start">
                            {tags.map(tag => (
                                <li class="rounded-md border border-pink-500/40 flex justify-center items-center gap-x-2 py-1 px-2 text-base bg-pink-500/10 text-pink-500">#{tag}</li>
                            ))}
                        </ul>
                    </div>
                    </div>
                </div>
            </a>
            ))
}

</div>